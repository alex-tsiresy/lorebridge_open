{
  "manifest_version": 3,
  "name": "Web Clipper",
  "version": "1.0",
  "description": "Capture website content and screenshots",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Web Clipper"
  },
    "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["chat-extractors.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["chat-extractors.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
} 